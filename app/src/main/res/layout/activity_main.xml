<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="KONVERSI SUHU"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reamur"
        android:layout_width="129dp"
        android:layout_height="39dp"
        android:text="REAMUR"
        android:textSize="24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="148dp" />

    <EditText
        android:id="@+id/tfcel"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="73dp" />

    <TextView
        android:id="@+id/farenheit"
        android:layout_width="129dp"
        android:layout_height="39dp"
        android:text="FARENHEIT"
        android:textSize="24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="207dp" />

    <EditText
        android:id="@+id/tfre"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="131dp" />

    <TextView
        android:id="@+id/celcius"
        android:layout_width="129dp"
        android:layout_height="39dp"
        android:text="CELCIUS"
        android:textSize="24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="86dp" />

    <EditText
        android:id="@+id/tfkel"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="254dp" />

    <TextView
        android:id="@+id/kelvin"
        android:layout_width="129dp"
        android:layout_height="39dp"
        android:text="KELVIN"
        android:textSize="24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="271dp" />

    <EditText
        android:id="@+id/tffar"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="190dp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="172dp"
        android:layout_height="59dp"
        android:onClick="reset"
        android:text="RESET"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="446dp" />

    <Button
        android:id="@+id/masukkan"
        android:layout_width="172dp"
        android:layout_height="59dp"
        android:onClick="konversicelcius"
        android:text="KONVERSI (CELCIUS)"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="327dp" />

    <Button
        android:id="@+id/keluar"
        android:layout_width="172dp"
        android:layout_height="59dp"
        android:onClick="keluar"
        android:text="KELUAR"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="446dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button4"
        android:layout_width="172dp"
        android:layout_height="59dp"
        android:onClick="konversireamur"
        android:text="KONVERSI (REAMUR)"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="327dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button5"
        android:layout_width="172dp"
        android:layout_height="59dp"
        android:onClick="konversifarenheit"
        android:text="KONVERSI (FARENHEIT)"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="387dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button6"
        android:layout_width="172dp"
        android:layout_height="59dp"
        android:onClick="konversikelvin"
        android:text="KONVERSI (KELVIN)"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="386dp"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>